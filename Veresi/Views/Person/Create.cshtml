@model Model.Entities.Person

<div class="container d-flex gap-4 align-items-center">
			<a class="rounded-pill border-0 text-center text-info" asp-controller="Home" asp-action="index">
				<i class="bi bi-arrow-left-circle fs-1"></i>
			</a>
	<h1>Create</h1>
</div>
<div class="container">
	<form method="post">
		<div class="d-flex gap-5">
			<div class="d-flex flex-column col-4">
				<label for="FullName" class="form-label mt-4 fs-4">Full Name</label>
				<input asp-for="@Model.FullName" required  type="text" class="form-control fs-4 border-dark" id="FullName" aria-describedby="Full name" placeholder="John Dough">
			</div>
			<div class="d-flex flex-column col-4">
				<label for="PhoneNumber" class="form-label mt-4 fs-4">Phone number</label>
				<input asp-for="@Model.PhoneNumber" type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" class="form-control fs-4 border-dark" id="PhoneNumber" aria-describedby="Phone Number" placeholder="XXX - XXX - XXX">
			</div>
		</div>
		<div class="d-flex gap-5">
			<div class="d-flex flex-column col-3">
				<label for="CreatedAt" class="form-label mt-4 fs-4">Created at</label>
				<input asp-for="@Model.CreatedAt" type="datetime-local" class="form-control fs-4 border-dark" id="CreatedAt" aria-describedby="Created At" value="@DateTime.Now">
			</div>
			<div class="col-5">
				<label for="exampleSelect1" class="form-label mt-4 fs-4">Select category</label>
				<select asp-for="@Model.Category" class="form-control fs-4 border-dark" id="exampleSelect1">
					<option selected disabled>Select Category</option>
				</select>
			</div>
		</div>
	</form>
</div>
@model Model.Entities.Person

<div class="container d-flex gap-4 align-items-center">
	<a class="rounded-pill border-0 text-center text-info" asp-controller="Home" asp-action="index">
		<i class="bi bi-arrow-left-circle fs-1"></i>
	</a>
	<h1>Create</h1>
</div>
<div class="container">
	<form class="form-controll" method="post">
		<input style="display: none" asp-for="@Model.id" />
		<div class="d-flex gap-5">
			<div class="d-flex flex-column col-4">
				<label for="FullName" class="form-label mt-4 fs-4">Full Name</label>
				<input disabled asp-for="@Model.FullName" required type="text" class="form-control fs-4 border-dark" id="FullName" aria-describedby="Full name" placeholder="John Dough">
			</div>
			<div class="d-flex flex-column col-4">
				<label for="PhoneNumber" class="form-label mt-4 fs-4">Phone number</label>
				<input disabled asp-for="@Model.PhoneNumber" type="tel" class="form-control fs-4 border-dark" id="PhoneNumber" aria-describedby="Phone Number" placeholder="XXX - XXX - XXX">
			</div>
		</div>
		<div class="d-flex gap-5">
			<div class="col-5">
				<label for="exampleSelect1" class="form-label mt-4 fs-4">Select category</label>
				<select disabled asp-for="@Model.Category" class="form-control fs-4 border-dark" id="exampleSelect1" data="@ViewBag.Categories">
					<option selected disabled>Select Category</option>
				</select>
			</div>
		</div>
		<div class="my-5 col-9 justify-content-end d-flex px-5">
			<a asp-action="Delete">
				<button type="submit" class="btn btn-danger fs-4 px-5" style="letter-spacing: 1px; margin-right: 7px">Delete</button>
			</a>
		</div>
	</form>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veresi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Veresi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar bg-primary mb-5">
            <div class="container-fluid justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <a class="navbar-brand text-light fs-2 " style="border-right: 1px dashed whitesmoke;padding-right:20px">Veresi</a>
                    <div class="d-flex justify-content-start gap-4 align-items-center text-light">
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                                {
                                    <a asp-action="Index" asp-route-categoryFilter="@category.CategoryType">@category.CategoryType</a>
                                }
                        }
                    </div>
                </div>
                <section class="d-flex gap-4 col-4 justify-content-end">
                    <form class="d-flex w-75" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-info px-4 d-flex" type="submit">Search <i class="bi bi-search px-2"></i></button>
                    </form>
                    <a class="btn btn-outline-info px-4" asp-controller="Person" asp-action="Create">
                        <i class="bi bi-file-plus"></i>
                    </a>
                    
                </section>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Veresi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
